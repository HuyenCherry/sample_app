<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="logo">
      <%= link_to t("app_name"), root_path %>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("page_home"), root_path %></li>
        <li><%= link_to t("page_help"), helf_path %></li>
